{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "jsx": "react",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "allowJs": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src",
        "**/*.config.ts"
    ]
}